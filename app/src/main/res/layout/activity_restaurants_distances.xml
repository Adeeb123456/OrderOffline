<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlout_restro_latilongi"
    tools:context="com.example.adeeb.mrpizprototype1.Restaurant"
    android:background="@drawable/ui"
    android:padding="16dp">



<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/cordinatlayout_restro"
    tools:context="com.example.adeeb.mrpizprototype1.Restaurant"

>
    <android.support.design.widget.AppBarLayout
         android:layout_width="match_parent"
        android:layout_height="274dp"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorAccent"
        android:background="?attr/colorPrimary"
        app:layout_collapseParallaxMultiplier=".7"

        >
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|enterAlways"



        >
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:src="@drawable/restrobg3llrge"
                app:contentScrim="?attr/colorAccent"
                app:layout_collapseParallaxMultiplier=".7"
                android:id="@+id/bgimage_restrolist"></ImageView>

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#f01e05"
                android:layout_marginTop="100dp"
                android:backgroundTint="#deff2c0b"
                android:foregroundGravity="top"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nearest Restaurants"
                    android:id="@+id/restrolist"
                    android:textColor="@color/Cornsilk" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="with in 20 km"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/Bisque" />
            </LinearLayout>
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"



                android:id="@+id/toolbar_restro_latilongi"
app:popupTheme="@style/myCustompopupTheme"

app:theme="@style/myCustomtheme"

                >

            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_restro_distances"
        android:padding="15dp"
        android:layout_marginTop="-75dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

    </android.support.v7.widget.RecyclerView>

</android.support.design.widget.CoordinatorLayout>



















    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer"
        >

    </android.support.design.widget.NavigationView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:id="@+id/linear_restro_latilongi_end"
        android:background="@drawable/textbg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:text=""
            android:textColor="#fbfcff"
            android:textStyle="bold"
            android:shadowColor="#010101"
            android:shadowRadius="1"
            android:shadowDx="2"
            android:shadowDy="2"
            android:textSize="16dp"
            />


    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
