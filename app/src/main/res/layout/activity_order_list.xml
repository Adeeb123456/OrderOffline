<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.adeeb.mrpizprototype1.OrderInfo"
    android:orientation="vertical"
    android:background="@drawable/ui"
    android:padding="2dp"
    android:weightSum="100">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/orderItemInfoDispalyLinearLayout2"

        android:background="#71434343"
        android:layout_weight="10">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbarorderlist"

            app:theme="@style/myCustomtheme"
            app:popupTheme="@style/myCustompopupTheme">


        </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclervieworderlist"

                android:padding="15dp"
               >

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#2da589ff"
        android:layout_weight="80"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="2"
            android:background="@drawable/bgogange">
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttontab1"
                android:background="@drawable/bgogange"

                android:layout_weight="1"
                android:textColor="#9c4312" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Order"
                android:id="@+id/sendorder"
                android:layout_weight="1"
                android:textColor="#010101"
                android:textStyle="bold"
                android:background="@drawable/bgogange"
                android:textSize="17dp"
                android:shadowColor="#FFE0E0E0"
                android:shadowRadius="1"
                android:shadowDx="2"
                android:shadowDy="2"/>


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/viewmapid"
                android:background="@drawable/bgogange"
                android:layout_weight="1"
                android:textColor="#a5440d" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>

